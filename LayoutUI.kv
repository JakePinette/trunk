            Button:
                text: 'Neighbourhood'
                size_hint: 1, 0.2
                
    TabbedPanelItem:
        id: Graph
        text: 'Graph Tab'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Path to, from'
            Button:
                text: 'placeholder'
            Button:
                text: 'stuff'
