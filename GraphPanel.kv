<GraphPanel>:
    canvas:
        Color:
            rgb: self.red, self.green, self.blue
        Rectangle:
            pos: self.pos
            size: self.width, self.height

<Edge>
    canvas:
        Color:
            rgba: self.red, self.green, self.blue, self.alpha
        Line:
            width: 1
            points: self.points
        Triangle:
            points: self.arrowPoints

<Vertex>:
    size: (self.radius*2, self.radius*2)
    canvas:
        Color:
            rgba: self.red, self.green, self.blue, self.alpha
        Ellipse:
            pos: self.pos
            size: self.size

<TestPanel>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle
            pos: 0,0
            size: self.width, self.height

<Highlight>:
    canvas:
        Color:
            rgb: 0, 0, 0
        Line:
            width: self.LW
            ellipse: (self.x, self.y, 2*self.radius, 2*self.radius)
    
