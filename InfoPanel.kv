<InfoPanel>:

    BoxLayout:
        size: root.size
        orientation: 'vertical'
        Button:
            text: "Vertex Info: "
            on_release: root.set_vertexTextInfo()
        Label:
            text: root.vertexTextInfo
            
        Button:
            text: "Vertex Outgoing Edges: "
            on_release: root.set_vertexOutgoingEdges()
        Label:
            text: root.vertexOutgoingEdges
            
        Button:
            text: "Vertex Incoming Edges: "
            on_release: root.set_vertexIncomingEdges()
        Label:
            text: root.vertexIncomingEdges
