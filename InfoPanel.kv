<InfoPanel>:

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'


        Button:
            size_hint: 1, 0.15
            text: "Vertex Name: "
            on_release: root.set_vertexName()
        TextInput:
            id: nameBox
            multiline: False
            size_hint: 1, 0.3
            text: root.vertexName
            readonly: False
            hint_text: 'click the label above to set'
            
        Button:
            size_hint: 1, 0.15
            text: "Vertex Info: "
            on_release: root.set_vertexTextInfo()
        TextInput:
            id: infoBox
            size_hint: 1, 0.5
            text: root.vertexTextInfo
            readonly: False
            hint_text: 'click the label above to set'
            
        Button:
            size_hint: 1, 0.15
            text: "Vertex Outgoing Edges: "
            on_release: root.set_vertexOutgoingEdges()
        TextInput:
            readonly: True
            text: root.vertexOutgoingEdges
            hint_text: 'click the label above to refresh'
            
        Button:
            size_hint: 1, 0.15
            text: "Vertex Incoming Edges: "
            on_release: root.set_vertexIncomingEdges()
        TextInput:
            readonly: True
            text: root.vertexIncomingEdges
            hint_text: 'click the label above to refresh'

