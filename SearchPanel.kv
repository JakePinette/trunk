<SearchPanel>:

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        
        BoxLayout:
            size_hint: 1, 0.1
            Label:
                text: 'From #: '

            TextInput:
                id: fromBox
                multiline: False
                #text: root.currentVertexNo
                readonly:False
                size_hint: 0.8, 0.8

            Label:
                text: 'To #: '
                size_hint: 0.7, 1
                
            TextInput:
                id: toBox
                multiline: False
                #text: root.nextVertexNo
                readonly: False
                size_hint: 0.8, 0.8

        BoxLayout:
            orientation: 'vertical'
            
            Button:
                text: 'Search'
                on_release: root.performTask(root.workingGraph, root.currentVertex, root.nextVertex) 
                size_hint: 1, 0.2
                
            TextInput:
                id: pathBox
                multiline: True
                text: root.path
                readonly: True

        
