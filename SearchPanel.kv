<SearchPanel>:

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        
        BoxLayout:
            size_hint: 1, 0.1
            Button:
                text: 'From: '
                on_release: root.set_fromVertex(root.workingGraph)

            TextInput:
                id: fromBox
                multiline: False
                text: root.currentVertexNo
                readonly:False

            Label:
                text: " -> "

            Button:
                text: 'To: '
                on_release: root.set_toVertex(root.workingGraph)

            TextInput:
                id: toBox
                multiline: False
                text: root.nextVertexNo
                readonly: False

        BoxLayout:
                
            TextInput:
                id: pathBox
                multiline: True
                text: root.path
                readonly: True

        
